<?php
/**
 * @var \Zend\View\Renderer\PhpRenderer $this
 * @var string $term
 * @var array $args
 * @var array $options
 * @var int total
 */

$translate = $this->plugin('translate');
?>
<div class="reference-block">
    <?php if ($options['heading']): ?>
    <h3><?php echo str_replace('{total}', $total, $translate($options['heading'])); ?></h3>
    <?php endif; ?>
    <?php
    if ($total):
        echo $this->reference()->displayListForTerm($term, $args, $options);
    else:
    ?>
    <p><?php echo $translate('There is no references.'); ?></p>
    <?php
    endif;
    ?>
</div>
